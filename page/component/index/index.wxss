/**index.wxss**/
.index_title {
	background: #f04848;
	/* background: -webkit-linear-gradient(0deg,#f04848,#ef6647); */
	padding: 30px 20px;
}

.img_round {
	border-radius: 50%;
}

.global-box {
	display: table;
}

.img-box {
	display: table-cell;
	vertical-align: top;
	width: 60px;
}

.img-box image {
	width: 50px;
	height: 50px;
}

.text-box {
	display: table-cell;
	vertical-align: middle;
}

.line_none:before {
	border-top: 0;
}

.line_none:after {
	border-bottom: 0;
}

.card_radius {
	border-radius: 10px;
	border: 1px solid rgba(0,0,0,.05);
}

.card_acress:after {
	content: " ";
	display: inline-block;
	-webkit-transform: rotate(45deg);
	transform: rotate(45deg);
	height: 6px;
	width: 6px;
	border-width: 2px 2px 0 0;
	border-color: #f04748;
	border-style: solid;
	margin-right: 4px;
}

.span_red_border {
	border-radius: 10px;
	padding: 1px 5px;
	border: 1px solid #f04748;
	line-height: 1;
	color: #f04748;
	margin-top: 8px;
	max-width: 60px;
	display: block;
	font-size: 12px;
}

.range_box {
	width: calc(100% - 70px);
	height: 13px;
	background: #f1f1f1;
	border-radius: 10px;
	margin-top: 7px;
	position: relative;
}

.range_active {
	position: absolute;
	top: 0;
	left: 0;
	background: #fbc5be;
	display: block;
	height: 13px;
	border-radius: 10px;
}

.icon {
	width: 28rpx;
	height: 28rpx;
}

.tab-h {
	height: 100rpx;
	width: 100%;
	box-sizing: border-box;
	overflow: hidden;
	line-height: 100rpx;
	background: #fff;
	font-size: 28rpx;
	white-space: nowrap;
}

.tab-item {
	margin: 0 36rpx;
	display: inline-block;
}

.tab-item.active {
	color: #f04748;
	position: relative;
	font-size: 28rpx;
}

.tab-item.active:after {
	content: "";
	display: block;
	height: 8rpx;
	width: 78rpx;
	background: #f04748;
	position: absolute;
	bottom: 0;
	left: 5rpx;
	border-radius: 16rpx;
}

.scoll-h {
	height: 100%;
}

.section {
	margin-top: 5px;
}

.evaluate_textarea {
	background: #f1f1f1;
	text-align: left;
	width: 100%;
	padding: 3px;
	height: 180rpx;
}

.text-left {
	text-align: left;
}

.text-middle{
  margin-top: -0rpx;
}
.indexnone_img{
  width: 60%;
  position: fixed;
  top: 15%;
  left:20%;
  height: 400rpx;
  opacity: 0.5;
}
.indextextnone{
  font-size: 28rpx;
  color: #818f96;
  text-align: center;
  position: absolute;
  left: 0;
  top: 60%;
  width: 100%;
}

