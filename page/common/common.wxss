


.btn,
button.btn,
input.btn {
  width: 100%;
  border-width: 0;
  outline: 0;
  -webkit-appearance: none;
  border-radius: 30px;
  line-height: 45px;
  color: #fff;
  position: relative;  
  display: block;
  overflow: hidden;  
  user-select: none; 
}
button.btn:focus,
input.btn:focus {
  outline: 0;
}
button.weui_btn_inline,
input.weui_btn_inline,
button.weui_btn_mini,
input.weui_btn_mini {
  width: auto;
}
.waves{
  position:relative;
  cursor:pointer;
  display:inline-block;
  overflow:hidden;
  text-align: center;
  -webkit-tap-highlight-color:transparent;
  z-index:1;
}
.waves .waves-animation{
  position:absolute;
  border-radius:300px;
  width:30px;
  height:30px;
  opacity:0;
  background:rgba(255,255,255,0.5);
  transition:all 1s ease-out;
  transition-property:transform, opacity, -webkit-transform;
  -webkit-transform:scale(0);
  transform:scale(0);
  pointer-events:none
}
